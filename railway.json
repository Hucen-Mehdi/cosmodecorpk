{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "workingDirectory": "server",
    "ignorePaths": [
      "package.json",
      "package-lock.json",
      "node_modules",
      ".next",
      "app",
      "components",
      "src"
    ]
  },
  "deploy": {
    "startCommand": "node dist/index.js",
    "workingDirectory": "server"
  }
}